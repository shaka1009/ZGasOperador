<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secundaryColor</item>
        <item name="colorSecondaryVariant">@color/secundaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- STATUS BAR. -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:navigationBarColor">@color/primaryDarkColor</item>
        <!-- TOOLBAR -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Fuente -->
        <item name="android:fontFamily">@font/verdana</item>
        <!-- MayÃºsculas text -->
        <item name="textAllCaps">false</item>
        <!-- Puntero Escribir. -->
        <item name="colorAccent">@color/primaryDarkColor</item>
        <!-- Toolbar -->
        <item name="android:textColorSecondary">@color/white</item> <!-- AFECTA A OTROS -->
        <item name="actionMenuTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/primaryDarkColor</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="SplashTheme.Splash.Loading" parent="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/primaryColor</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>
    </style>

    <style name="AppTheme.ToolbarWhite" parent="AppTheme">
        <!-- Toolbar -->
        <item name="android:textColorSecondary">@color/primaryDarkColor</item> <!-- AFECTA A OTROS -->
        <item name="actionMenuTextColor">@color/primaryDarkColor</item>
        <item name="titleTextColor">@color/primaryDarkColor</item>
        <item name="android:textColorPrimary">@color/primaryDarkColor</item>
    </style>

    <style name="CardView"  parent="CardView.Light">
        <!-- Toolbar -->
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">7.5dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="background">@drawable/cardview_shadow</item>
        <item name="android:padding">5dp</item>
    </style>


    <!-- ESTOS BOTONES SI TIENEN SOMBRA -->
    <style name="button_cancelar" parent="AppTheme">
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@color/grisDefault</item>
        <item name="android:backgroundTint">@color/grisDefault</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <!-- ESTOS BOTONES SI TIENEN SOMBRA -->
    <style name="button_confirmar" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@color/Verde</item>
        <item name="android:backgroundTint">@color/Verde</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_circle_color</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/primaryDarkColor</item>
        <item name="colorControlActivated">@color/primaryDarkColor</item>
    </style>

</resources>
